<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".post.PostActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">

            <include layout="@layout/snippet_top_bar_post"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/relLayout1"
            android:id="@+id/relLayout2"
            android:background="@color/colorWhite"
            android:layout_above="@id/relLayout3">

            <!--WriteBoard-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relLayout_inner2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <EditText
                    android:id="@+id/post_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|start"
                    android:background="#00000000"
                    android:textCursorDrawable="@null"
                    android:hint="@string/post_bait_text"
                    android:textSize="25sp"
                    android:textColor="@color/colorFontMajor"/>

            </RelativeLayout>

        </RelativeLayout>

        <!--Media and Poll-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/relLayout3"
            android:layout_alignParentBottom="true">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/attachment_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabGravity="fill"
                app:tabMode="fixed"
                app:tabIndicator="@android:color/transparent"
                android:background="@drawable/white_grey_border_top"
                app:tabTextAppearance="@style/AttachmentTabTextStyle"
                app:tabTextColor="@color/colorFontMajor">

                <!--<android.support.design.widget.TabItem-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:icon="@drawable/ic_photos"/>-->
                <!--<android.support.design.widget.TabItem-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:icon="@drawable/ic_google"/>-->
                <!--<android.support.design.widget.TabItem-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:icon="@drawable/ic_twitter" />-->
                <!--<android.support.design.widget.TabItem-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:icon="@drawable/ic_heart" />-->

            </com.google.android.material.tabs.TabLayout>

        </RelativeLayout>

    </RelativeLayout>





</androidx.coordinatorlayout.widget.CoordinatorLayout>