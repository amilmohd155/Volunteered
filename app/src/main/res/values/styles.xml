<resources xmlns:tools="http://schemas.android.com/tools">

  <!-- Base application theme. -->
  <style parent="Theme.AppCompat.Light.NoActionBar" name="AppTheme">

    <!-- Customize your theme here. -->
    <item name="android:fontFamily">@font/roboto</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:statusBarColor">#323643</item>
    <item name="android:windowBackground">@color/colorWhite</item>
    <item name="radioButtonStyle">@style/RadioButtonStyle</item>
    <item name="android:radioButtonStyle">@style/RadioButtonStyle</item>
    <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    <item name="android:screenOrientation">portrait</item>

    <item name="android:overScrollMode">never</item>
    <item name="android:windowAnimationStyle">@null</item>

  </style>

  <!--Radio Button style-->
  <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
    <item name="android:textColor">@color/colorBlack</item>
    <item name="android:buttonTint">@drawable/component_button_drawable</item>
  </style>

  <!-- TextInpuLayout Appearance -->
  <style parent="" name="ErrorText">
    <item name="android:textColor">@color/colorVlt</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style parent="" name="HintText">
    <item name="android:textColor">@color/colorFeedText</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="CounterText" parent="TextInputLayoutAppearance">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/colorBlue63</item>
  </style>

  <style parent="" name="TextInputLayoutAppearance">
    <!-- reference our hint & error styles -->
    <item name="hintTextAppearance">@style/HintText</item>
    <item name="errorTextAppearance">@style/ErrorText</item>
    <item name="android:textColor">@color/colorLighterFont</item>
    <item name="android:textColorHint">@color/coloVLFont</item>
    <item name="colorControlNormal">@color/colorGrey101</item>
    <item name="colorControlActivated">@color/colorLighterFont</item>
    <item name="colorControlHighlight">@color/colorFeedStats</item>
  </style>

  <!--tab layout style-->
  <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">@color/colorBlack</item>
    <item name="tabIndicatorHeight">2dp</item>
    <item name="tabPaddingStart">12dp</item>
    <item name="tabPaddingEnd">12dp</item>
    <item name="tabBackground">?attr/selectableItemBackground</item>
    <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
    <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    <item name="tabRippleColor">@android:color/transparent</item>
  </style>
  <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">?android:textColorSecondary</item>
    <item name="textAllCaps">true</item>
  </style>

  <!--Attachments Tab-->
  <style name="AttachmentTabTextStyle" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">11sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <!--Autocomplete Text-->
  <style name="AutoCompleteTextViewLight" parent="@android:style/Widget.AutoCompleteTextView">
    <item name="android:textColor">@color/colorWhite</item>
  </style>

  <!--Rating Style-->
  <style name="CustomRatingIndicator" parent="@android:style/Widget.RatingBar">
    <item name="android:minHeight">24dp</item>
    <item name="android:minWidth">24dp</item>
    <item name="android:stepSize">0.5</item>
    <item name="android:numStars">5</item>
    <item name="android:isIndicator">true</item>
    <item name="android:progressDrawable">@drawable/rating_bar_heart</item>
  </style>
  <style name="CustomRating" parent="Widget.AppCompat.RatingBar">
    <item name="android:numStars">5</item>
    <item name="android:stepSize">0.5</item>
    <item name="android:isIndicator">false</item>
  </style>

  <style name="splashTheme" parent="AppTheme">
    <item name="android:windowDisablePreview">true</item>
  </style>

  <style name="errorText" parent="Widget.AppCompat.TextView">
    <item name="android:textColor">#E91E63</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="AppBottomSheetDialogTheme"
      parent="Theme.Design.Light.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/AppModalStyle</item>
  </style>

  <style name="AppModalStyle"
      parent="Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/rounded_top_corners</item>
  </style>

  <style name="FancyButtonCustom">
    <item name="fb_radius">10dp</item>
    <item name="fb_defaultColor">@color/colorBlack</item>
    <item name="fb_borderColor">@color/colorBlack</item>
    <item name="fb_borderWidth">2dp</item>
    <item name="fb_disabledColor">@color/colorWhite</item>
    <item name="fb_disabledTextColor">@color/colorFontMajor</item>
    <item name="fb_disabledBorderColor">#D3D3D3</item>
  </style>

</resources>